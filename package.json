{
  "name": "mongo-orm",
  "version": "0.0.1",
  "description": "A entity to document mapper for MongoDB",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "ts:node": "ts-node src/schema.ts",
    "test": "mocha --require ts-node/register --project tsconfig.json test/**/*.test.ts",
    "test::watch": "mocha --watch --watch-extensions ts --require ts-node/register --project tsconfig.json test/**/*.test.ts",
    "build": "rm -rf ./dist && tsc",
    "coverage": "npm run build && rm -rf ./coverage && nyc mocha",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "dist",
      "test",
      "**/*.d.ts"
    ],
    "reporter": [
      "lcov",
      "html"
    ],
    "all": true
  },
  "author": "Ben Dietz",
  "repository": {
    "type": "git",
    "url": "https://github.com/nyze2oo9/MongoEDM.git"
  },
  "license": "MIT",
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/lodash": "^4.14.120",
    "@types/mocha": "^5.2.0",
    "chai": "^4.1.2",
    "coveralls": "^3.0.2",
    "istanbul": "v1.1.0-alpha.1",
    "mocha": "^5.1.1",
    "nyc": "^12.0.2",
    "source-map-support": "^0.5.6",
    "ts-node": "^6.0.0",
    "tslint": "^5.9.1",
    "tslint-config-airbnb": "^5.8.0",
    "typescript": "^2.8.3"
  }
}
